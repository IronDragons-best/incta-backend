{
  "name": "gd-main-app",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"apps/**/*.ts\" \"libs/**/*.ts\"",
    "start": "nest start",
    "kill:3000": "powershell -Command \"try { Get-Process -Id (Get-NetTCPConnection -LocalPort 3000).OwningProcess | Stop-Process -Force -ErrorAction Stop } catch { Write-Host 'Port 3000 not in use or already freed.' }\"",
    "start:dev": "npm run kill:3000 && nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/apps/gd-main-app/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./apps/gd-main-app/test/jest-e2e.json",
    "build:gd-main-app": "nest build gd-main-app",
    "build:files-service": "npm run prisma:files:generate && nest build files-service",
    "build:notification-service": "nest build notification-service",
    "build:payments-service": "nest build payments-service",
    "add:migration": "node apps/gd-main-app/database/utils/add.migration.js",
    "migration:run": "typeorm-ts-node-commonjs migration:run -d apps/gd-main-app/database/typeorm.config.ts",
    "migration:revert": "typeorm-ts-node-commonjs migration:revert -d apps/gd-main-app/database/typeorm.config.ts",
    "dev:prisma:files:generate": "dotenv -e ./env/.env.development.local -- pnpm dlx prisma generate --schema=apps/files-service/prisma/schema.prisma",
    "dev:prisma:files:migrate": "dotenv -e ./env/.env.development.local -- pnpm dlx prisma migrate dev --schema=apps/files-service/prisma/schema.prisma",
    "dev:prisma:files:push": "dotenv -e ./env/.env.development.local -- pnpm dlx prisma db push --schema=apps/files-service/prisma/schema.prisma",
    "dev:prisma:files:pull": "dotenv -e ./env/.env.development.local -- pnpm dlx prisma db pull --schema=apps/files-service/prisma/schema.prisma",
    "dev:prisma:files:studio": "dotenv -e ./env/.env.development.local -- pnpm dlx prisma studio --schema=apps/files-service/prisma/schema.prisma",
    "prisma:files:generate": "pnpm prisma generate --schema=apps/files-service/prisma/schema.prisma",
    "prisma:files:migrate:deploy": "dotenv -e ./.env.production -- pnpm prisma migrate deploy --schema=apps/files-service/prisma/schema.prisma || pnpm prisma migrate deploy --schema=apps/files-service/prisma/schema.prisma || dotenv -e ./env/.env.development.local -- pnpm dlx prisma migrate dev --schema=apps/files-service/prisma/schema.prisma",
    "prisma:files:pull": "pnpm dlx prisma db pull --schema=apps/files-service/prisma/schema.prisma",
    "start:gd-main-app": "npm run migration:run && node -r newrelic dist/apps/gd-main-app/main",
    "start:files-service": "npm run prisma:files:migrate:deploy && node -r newrelic dist/apps/files-service/main",
    "start:notification-service": "node -r newrelic dist/apps/notification-service/main",
    "start:payments-service": "node dist/apps/payments-service/main",
    "start:dev:gd-main-app": "set NODE_OPTIONS=--expose-gc --max-old-space-size=512 && nest start gd-main-app --watch",
    "start:dev:files-service": "set NODE_OPTIONS=--expose-gc --max-old-space-size=512 && nest start files-service --watch",
    "start:dev:notification-service": "set NODE_OPTIONS=--expose-gc --max-old-space-size=512 && nest start notification-service --watch",
    "start:dev:payments-service": "set NODE_OPTIONS=--expose-gc --max-old-space-size=512 && nest start payments-service --watch",
    "docker:dev:up": "docker-compose -f docker-compose.dev.yml up -d",
    "docker:dev:down": "docker-compose -f docker-compose.dev.yml down"
  },
  "dependencies": {
    "@apollo/server": "4.10.5",
    "@aws-sdk/client-s3": "^3.850.0",
    "@aws-sdk/lib-storage": "^3.850.0",
    "@nestjs-modules/mailer": "^2.0.2",
    "@nestjs/apollo": "13.1.0",
    "@nestjs/axios": "^4.0.0",
    "@nestjs/common": "^11.0.1",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.0.1",
    "@nestjs/cqrs": "^11.0.3",
    "@nestjs/event-emitter": "^3.0.1",
    "@nestjs/graphql": "13.1.0",
    "@nestjs/jwt": "^11.0.0",
    "@nestjs/microservices": "^11.1.3",
    "@nestjs/mongoose": "^11.0.3",
    "@nestjs/passport": "^11.0.5",
    "@nestjs/platform-express": "^11.0.1",
    "@nestjs/platform-socket.io": "^11.1.6",
    "@nestjs/swagger": "^11.2.0",
    "@nestjs/throttler": "^6.4.0",
    "@nestjs/typeorm": "^11.0.0",
    "@nestjs/websockets": "^11.1.6",
    "@node-rs/argon2": "^2.0.2",
    "@prisma/client": "6.12.0",
    "@types/passport-github2": "^1.2.9",
    "amqp-connection-manager": "^4.1.14",
    "amqplib": "^0.10.8",
    "axios": "^1.10.0",
    "bcrypt": "^6.0.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "cookie-parser": "^1.4.7",
    "dotenv": "^16.5.0",
    "dotenv-cli": "^9.0.0",
    "form-data": "^4.0.4",
    "graphql": "16.8.1",
    "ioredis": "^5.6.1",
    "joi": "^17.13.3",
    "mongoose": "^8.16.0",
    "newrelic": "^13.0.0",
    "nodemailer": "^7.0.4",
    "passport": "^0.7.0",
    "passport-github2": "^0.1.12",
    "passport-google-oauth20": "^2.0.0",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
    "pg": "^8.16.3",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "sharp": "^0.34.3",
    "socket.io": "^4.8.1",
    "socket.io-client": "^4.8.1",
    "stripe": "^18.5.0",
    "typeorm": "^0.3.25",
    "typeorm-naming-strategies": "^4.1.0",
    "typeorm-transactional": "^0.5.0",
    "ua-parser-js": "^2.0.4",
    "useragent": "^2.3.0",
    "uuid": "^11.1.0",
    "winston": "^3.17.0",
    "winston-transport": "^4.9.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.18.0",
    "@nestjs/cli": "^11.0.0",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/testing": "^11.0.1",
    "@swc/cli": "^0.6.0",
    "@swc/core": "^1.10.7",
    "@types/amqplib": "^0.10.7",
    "@types/bcrypt": "^5.0.2",
    "@types/cookie-parser": "^1.4.9",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.14",
    "@types/joi": "^17.2.3",
    "@types/multer": "^2.0.0",
    "@types/newrelic": "^9.14.8",
    "@types/node": "^22.10.7",
    "@types/passport-google-oauth20": "^2.0.16",
    "@types/passport-jwt": "^4.0.1",
    "@types/passport-local": "^1.0.38",
    "@types/pg": "^8.15.4",
    "@types/stripe": "^8.0.417",
    "@types/supertest": "^6.0.2",
    "@types/winston": "^2.4.4",
    "cross-env": "^7.0.3",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.2",
    "globals": "^15.14.0",
    "jest": "^29.7.0",
    "prettier": "^3.4.2",
    "prisma": "^6.12.0",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "tsconfig-paths-jest": "^0.0.1",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.20.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/apps/",
      "<rootDir>/libs/"
    ],
    "moduleNameMapper": {
      "^@app/cache(|/.*)$": "<rootDir>/libs/cache/src/$1",
      "^@common$": "<rootDir>/libs/common/src",
      "^@common/(.*)$": "<rootDir>/libs/common/src/$1",
      "^@monitoring$": "<rootDir>/libs/monitoring/src",
      "^@monitoring/(.*)$": "<rootDir>/libs/monitoring/src/$1"
    }
  }
}
